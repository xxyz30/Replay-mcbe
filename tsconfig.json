{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "target": "ES6",
        "lib": [
            "ES6",
            "DOM",
            "ES2017"
        ],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "scripts",
    },
    "include": [
        "src",
    ]
}